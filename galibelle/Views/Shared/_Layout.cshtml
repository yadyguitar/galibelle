<div class="modal fade" id="myModal5" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 style="font-weight:bold;" class="modal-title" id="myModalLabel">Datos administrador</h2>
            </div>
            <div class="col-md-12" style="padding:0%;">
                <div class="panel panel-white">

                    <div class="panel-body">
                        <form>

                            <div class="form-group">
                                <label style="color:#3e3939;font-weight:bold;font-size:16px;">Dirección del almacén: </label>
                                <input id="inputDireccion" disabled class="form-control" placeholder="Mar de Japón #17 Fracc. Costa Verde">
                            </div>
                            <div class="form-group">
                                <label style="color:#3e3939;font-weight:bold;font-size:16px;">Teléfono: </label>
                                <input id="inputTel" disabled class="form-control" placeholder="2251006309">
                            </div>
                            <div class="form-group">
                                <label style="color:#3e3939;font-weight:bold;font-size:16px;">Usuario: </label>
                                <input id="inputUsuario" disabled class="form-control" placeholder="Almacén">
                            </div>
                            <div class="form-group">
                                <label style="color:#3e3939;font-weight:bold;font-size:16px;">Contraseña: </label>
                                <input id="inputContras" disabled class="form-control" placeholder="1234567890">
                            </div>
                            <div class="modal-footer">
                                <button id="guardarInput" onclick="guardar()" data-dismiss="modal" style="visibility:hidden;" type="button" class="pull-left btn btn-primary">Guardar cambios</button>
                                <button id="cambiarInput" onclick="cambiar()" type="button" class="pull-right btn btn-primary">Realizar cambios</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!--END MODAL VER-->
<script type="text/javascript">

    function mostrar() {
        var nombre = document.getElementById('nombre');
        if (contador == 0) {
            nombre.style.visibility = "visible";
            contador = 1;
        }
        else {
            nombre.style.visibility = "hidden";
            contador = 0;
        }
    }
    function cambiar () {
        var Dir = document.getElementById('inputDireccion');
        var Tel = document.getElementById('inputTel');
        var Usuario = document.getElementById('inputUsuario');
        var Contras = document.getElementById('inputContras');
        var guardar = document.getElementById('guardarInput');
        var cambiar = document.getElementById('cambiarInput');

        Dir.disabled = false;
        Tel.disabled = false;
        Usuario.disabled = false;
        Contras.disabled = false;
        guardar.style.visibility = "visible";
        cambiar.style.visibility = "hidden";

    }

    function guardar() {
        var Dir = document.getElementById('inputDireccion');
        var Tel = document.getElementById('inputTel');
        var Usuario = document.getElementById('inputUsuario');
        var Contras = document.getElementById('inputContras');
        var guardar = document.getElementById('guardarInput');
        var cambiar = document.getElementById('cambiarInput');
        Dir.disabled = true;
        Tel.disabled = true;
        Usuario.disabled = true;
        Contras.disabled = true;
        guardar.style.visibility = "hidden";
        cambiar.style.visibility = "visible";
    }
    function noCambiar(){
        
        if(@Session["menu"]==4){
            document.getElementById('c4').style.background="#424a5d";
            document.getElementById('c4').style.color="#aeb2b7";
        }
        if(@Session["menu"]==5){
            document.getElementById('c5').style.background="#424a5d";
            document.getElementById('c5').style.color="#aeb2b7";
        }
        if(@Session["menu"]==6){
            document.getElementById('c6').style.background="#424a5d";
            document.getElementById('c6').style.color="#aeb2b7";
        }
        if(@Session["menu"]==7){
            document.getElementById('c7').style.background="#424a5d";
            document.getElementById('c7').style.color="#aeb2b7";
        }
        document.getElementById("c5").style.background = "#68dff0";
        document.getElementById("c5").style.color = "white";
    }
</script>
